<%- include ('header') %>


    <!-- content home -->
    <!-- slide -->
    <div id="slide01" class="carousel slide wow animate__fadeInUpBig" data-ride="carousel" data-wow-duration="1.5s">
        <ol class="carousel-indicators">
            <li data-target="#slide01" data-slide-to="0" class="active"></li>
            <li data-target="#slide01" data-slide-to="1"></li>
            <li data-target="#slide01" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img width="100%" height="710px" src="./images/slide-1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img width="100%" height="710px" src="./images/slide-2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img width="100%" height="710px" src="./images/slide-3.png" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3>New Collection</h3>
                    <a href="/shop-collect" class="btn btn-outline-secondary mt-5">Shop Now</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#slide01" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#slide01" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- end slide  -->
    <!-- slide item -->
    <div class="container-fluid slide-item pb-5">
        <div class="row mt-5">
            <span class="wow animate__fadeInDown" data-wow-duration="1s" style="font-family: var(--font-title); font-size: var(--size-title); margin: auto; letter-spacing: var(--spacing-normal);">New Arrivals</span>
        </div>
        <div class="row">
            <% var time = 0; %>
            <% data.forEach(function(motsp){ %>         
            <div class="col-sm-3 wow animate__bounceInUp" data-wow-duration="1s" data-wow-delay = "<%= time %>s">
                <a href="/item.<%= motsp._id %>">
                    <div class="card text-left">
                        <img class="card-img-top" height="300px" src="<%= motsp.images[0] %>" alt="">
                        <div class="card-body">
                          <h4 class="card-title"><%= motsp.title %></h4>
                          <p class="card-text"><%= motsp.price %> VNƒê</p>
                        </div>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
        <a href="/shop-collect" class="btn btn-outline-secondary mt-5">Shop All</a>
    </div>
    <!-- end slide item -->
    <!-- end home content -->
<%- include ('footer') %>