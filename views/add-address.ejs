<div class="tt-breadcrumb">
	<div class="container">
		<ul>
			<li><a href="/">Home</a></li>
			<li>Account</li>
		</ul>
	</div>
</div>
<div id="tt-pageContent">
	<div class="container-indent">
		<div class="container container-fluid-custom-mobile-padding">
			<h1 class="tt-title-subpages noborder">Delivery Infomations</h1>
			<div class="tt-shopping-layout">
				<h2 class="tt-title">Delivery Address</h2>
				<div class="tt-wrapper">
					
					<div class="form-default">
						<form method="POST" action="/add-order" >
							<div class="form-group">
								<label for="shopAddress" class="control-label">Address *</label>
								<input type="text" class="form-control" id="shopAddress" name="address" required>
							</div>				
							<div class="form-group">
								<label for="shopPhone" class="control-label">Phone Number</label>
								<input type="tel" class="form-control" id="shopPhone" name="phone" required	>
							</div>					
							<div class="row tt-offset-21">
								<div class="col-auto">
									<button type="submit" class="btn">CHECKOUT</button>
								</div>
								<div class="col-auto align-self-center">
									or	<a href="/" class="tt-link">Cancel</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
