<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <header>
    <% include partials/header %>
    </header>
    <div class="tt-breadcrumb">
      <div class="container">
        <ul>
          <li><a href="/">Home</a></li>
          <li>Account</li>
        </ul>
      </div>
    </div>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container container-fluid-custom-mobile-padding">
          <h1 class="tt-title-subpages noborder">Account</h1>
          <div class="tt-shopping-layout">
            <h2 class="tt-title-border">My account</h2>
            <div class="tt-wrapper">
              <h3 class="tt-title">Order history!</h3>
              <%if (messageSucc != "undefined") { %>
              <div
                class="error"
                style="background-color: #ffffff; font-weight: bold; color :rgb(0,255,127)"
              >
                <%= messageSucc %>
              </div>
              <% } %>
              <%if (messageError != "undefined") { %>
                <div
                  class="error"
                  style="background-color: #ffffff; font-weight: bold; color :rgb(255,0,0)"
                >
                  <%= messageError %>
                </div>
                <% } %>
              <div class="tt-table-responsive">
                <table class="tt-table-shop-01">
                  <thead>
                    <tr>
                      <th>Số Order</th>
                      <th>Ngày Order</th>
                      <th>Địa chỉ nhận</th>
                      <th>SĐT Nhận</th>
                      <th>Tổng tiền</th>
                      <th>Tình trạng</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.forEach(function(o){ %>
                    <tr>
                      <td><a href="javascript:void(0)">#<%= o._id %></a></td>
                      <td><%= o.date %></td>
                      <td><%= o.address %></td>
                      <td>
                        <%= o.phoneNumber %>
                      </td>
                      <td>
                        $<%= o.cart.totalPrice %> cho <%= o.cart.totalQty %> sản phẩm
                      </td>
                      <td>
                        <%= o.orderStatus %>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="tt-wrapper">
              <h3 class="tt-title">Account Info</h3>
              <div class="tt-table-responsive">
                <table class="tt-table-shop-02">
                  <tbody>
                    <tr>
                      <td>Full name:</td>
                      <td><%= user.firstName %> <%= user.lastName %></td>
                    </tr>
                    <tr>
                      <td>Email:</td>
                      <td><%= user.email %></td>
                    </tr>
                    <tr>
                      <td>Address:</td>
                      <td>
                        <%= user.address %>
                      </td>
                    </tr>

                    <tr>
                      <td>Phone Number:</td>
                      <td><%= user.phoneNumber %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <a href="/account-change-info" class="btn btn-border rounded-0">Change infomation</a>
              </div>
              <a href="/change-password" class="btn btn-border rounded-0">Change Password!!</a>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <% include partials/footer %>
    </footer>
    <a href="#" class="tt-back-to-top">BACK TO TOP</a>
    <!-- Partials -->
    <% include partials/script %>
  </body>
</html>
